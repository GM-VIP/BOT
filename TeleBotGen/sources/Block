#!/bin/bash

bloqfile="/etc/ADM-db/bloqueados.txt"
[[ ! -e $bloqfile ]] && touch $bloqfile

grupo_admin="-1002826624584"  # Grupo donde se notifica

block_fun () {
    id_input=$(echo "${comando[1]}" | sed 's/@//g')

    if [[ -z $id_input ]]; then
        bot_retorno="âš ï¸ Debes ingresar un ID o @usuario\nUso: /block 123456789 o /block @usuario"
        msj_fun
        return
    fi

    id_bloq=$(jq -r ".[] | select(.usuario==\"$id_input\" or .id==\"$id_input\") | .id" /etc/ADM-db/VIP-database.json)
    nombre_bloq=$(jq -r ".[] | select(.id==\"$id_bloq\") | .nombre" /etc/ADM-db/VIP-database.json)
    usuario_bloq=$(jq -r ".[] | select(.id==\"$id_bloq\") | .usuario" /etc/ADM-db/VIP-database.json)

    if [[ -z $id_bloq ]]; then
        bot_retorno="âŒ Usuario no encontrado en la base VIP."
        msj_fun
        return
    fi

    if grep -q "^$id_bloq$" "$bloqfile"; then
        bot_retorno="âš ï¸ Este usuario ya estaba bloqueado."
    else
        echo "$id_bloq" >> "$bloqfile"
        bot_retorno="âœ‹ Usuario bloqueado exitosamente.\nID: $id_bloq"

        texto="â›”ï¸ <b>Usuario bloqueado</b>\n"
        texto+="ğŸ†” ID: <code>$id_bloq</code>\n"
        texto+="ğŸ‘¤ Nombre: $nombre_bloq\n"
        texto+="ğŸ”— Usuario: @$usuario_bloq"
        ShellBot.sendMessage --chat_id "$grupo_admin" --text "$texto" --parse_mode html
    fi

    msj_fun
}

unblock_fun () {
    id_input=$(echo "${comando[1]}" | sed 's/@//g')

    if [[ -z $id_input ]]; then
        bot_retorno="âš ï¸ Debes ingresar un ID o @usuario\nUso: /unblock 123456789 o /unblock @usuario"
        msj_fun
        return
    fi

    id_unbloq=$(jq -r ".[] | select(.usuario==\"$id_input\" or .id==\"$id_input\") | .id" /etc/ADM-db/VIP-database.json)
    nombre_unbloq=$(jq -r ".[] | select(.id==\"$id_unbloq\") | .nombre" /etc/ADM-db/VIP-database.json)
    usuario_unbloq=$(jq -r ".[] | select(.id==\"$id_unbloq\") | .usuario" /etc/ADM-db/VIP-database.json)

    if [[ -z $id_unbloq ]]; then
        bot_retorno="âŒ Usuario no encontrado en la base VIP."
        msj_fun
        return
    fi

    if grep -q "^$id_unbloq$" "$bloqfile"; then
        sed -i "/^$id_unbloq$/d" "$bloqfile"
        bot_retorno="âœ… Usuario desbloqueado.\nID: $id_unbloq"

        texto="âœ… <b>Usuario desbloqueado</b>\n"
        texto+="ğŸ†” ID: <code>$id_unbloq</code>\n"
        texto+="ğŸ‘¤ Nombre: $nombre_unbloq\n"
        texto+="ğŸ”— Usuario: @$usuario_unbloq"
        ShellBot.sendMessage --chat_id "$grupo_admin" --text "$texto" --parse_mode html
    else
        bot_retorno="âš ï¸ El usuario no estaba bloqueado."
    fi

    msj_fun
}
